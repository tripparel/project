<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 지도 표시용 컨테이너 -->
    <FrameLayout
        android:id="@+id/tmapViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 출발지 및 목적지 입력 필드 -->
    <LinearLayout
        android:id="@+id/layoutRouteInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#AAFFFFFF"
        android:visibility="visible">

        <!-- 출발지 입력 -->
        <EditText
            android:id="@+id/editTextStartPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="출발지 입력"
            android:padding="10dp"
            android:backgroundTint="#DDDDDD"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- 목적지 입력 -->
        <EditText
            android:id="@+id/editTextEndPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="목적지 입력"
            android:padding="10dp"
            android:backgroundTint="#DDDDDD"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginTop="10dp" />

        <!-- POI 검색 버튼 -->
        <Button
            android:id="@+id/buttonSearchPOI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POI 검색"
            android:textColor="#FFFFFF"
            android:background="#6200EE"
            android:padding="10dp" />
    </LinearLayout>

    <!-- POI 리스트 -->
    <ListView
        android:id="@+id/listViewPOI"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/layoutRouteInput"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:padding="5dp" />

    <!-- 경로 찾기 버튼 -->
    <Button
        android:id="@+id/buttonFindRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewPOI"
        android:layout_marginTop="10dp"
        android:text="경로 찾기"
        android:textColor="#FFFFFF"
        android:background="#6200EE"
        android:padding="10dp"
        android:enabled="false" />
</RelativeLayout>
